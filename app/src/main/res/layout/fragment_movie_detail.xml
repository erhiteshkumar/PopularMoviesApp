<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/movieBackdropLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/movieBackdropImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/loading_image"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/movieTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_horizontal_padding"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@id/movieBackdropImageView"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/movieRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/text_horizontal_padding"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieReleaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/text_horizontal_padding"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/moviePosterImageView"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:paddingTop="@dimen/text_vertical_padding" />

            <TextView
                android:id="@+id/movieOverviewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_horizontal_padding"
                android:paddingTop="@dimen/text_vertical_padding" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>